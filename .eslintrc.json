{
  "root": true,
  "env": {
    "es6": true,
    "node": true
  },
  "parser": "espree",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module",
    "ecmaFeatures": {
      "globalReturn": false,
      "impliedStrict": true,
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "pragma": "h",
      "version": "latest"
    }
  },
  "globals": {
    "h": "readonly"
  },
  "plugins": [
    "react",
    "react-hooks"
  ],
  "extends": [
    "eslint:all",
    "plugin:react/all"
  ],
  "rules": {
    "array-bracket-newline": [
      "error",
      "consistent"
    ],
    "array-element-newline": [
      "error",
      "consistent"
    ],
    "capitalized-comments": "off",
    "comma-dangle": [
      "error",
      {
        "functions": "never"
      }
    ],
    "dot-location": [
      "error",
      "property"
    ],
    "indent": [
      "error",
      2
    ],
    "max-lines-per-function": [
      "error",
      {
        "skipBlankLines": true
      }
    ],
    "multiline-comment-style": [
      "error",
      "separate-lines"
    ],
    "new-cap": [
      "error",
      {
        "capIsNewExceptionPattern": "^Immutable[A-Z][a-z]+$"
      }
    ],
    "no-extra-parens": [
      "error",
      "all",
      {
        "ignoreJSX": "multi-line"
      }
    ],
    "no-magic-numbers": [
      "error",
      {
        "ignore": [
          0,
          1
        ]
      }
    ],
    "no-unused-vars": "error",
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "one-var": [
      "error",
      "never"
    ],
    "operator-linebreak": [
      "error",
      "before"
    ],
    "padded-blocks": [
      "error",
      "never",
      {
        "allowSingleLineBlocks": false
      }
    ],
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "prev": "*",
        "next": "return"
      }
    ],
    "quote-props": [
      "error",
      "as-needed"
    ],
    "quotes": [
      "error",
      "double"
    ],
    "react/display-name": [
      "error",
      {
        "ignoreTranspilerName": true
      }
    ],
    "react/jsx-filename-extension": "off",
    "react/jsx-indent": [
      "error",
      2
    ],
    "react/jsx-indent-props": [
      "error",
      2
    ],
    "react/no-set-state": "off",
    "react/static-property-placement": [
      "error",
      "property assignment"
    ],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error",
    "sort-imports": [
      "error",
      {
        "ignoreDeclarationSort": true
      }
    ],
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "strict": [
      "error",
      "global"
    ]
  },
  "overrides": [
    {
      "files": "index.spec.js",
      "env": {
        "jest": true
      }
    }
  ]
}
